{
  "version": 2,
  "builds": [
    {
      "src": "vercel.php",
      "use": "@vercel/php"
    }
  ],
  "routes": [
    {
      "src": "/install/(.*)",
      "dest": "/install/$1"
    },
    {
      "src": "/assets/(.*)",
      "dest": "/assets/$1"
    },
    {
      "src": "/files/(.*)",
      "dest": "/files/$1"
    },
    {
      "src": "/system/(.*)",
      "dest": "/system/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/vercel.php"
    }
  ],
  "env": {
    "APP_ENV": "production",
    "CI_ENVIRONMENT": "production"
  },
  "functions": {
    "vercel.php": {
      "maxDuration": 30
    }
  }
}
