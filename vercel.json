{
  "version": 2,
  "builds": [
    {
      "src": "CRM/index.php",
      "use": "@vercel/php"
    }
  ],
  "routes": [
    {
      "src": "/install/(.*)",
      "dest": "CRM/install/$1"
    },
    {
      "src": "/assets/(.*)",
      "dest": "CRM/assets/$1"
    },
    {
      "src": "/files/(.*)",
      "dest": "CRM/files/$1"
    },
    {
      "src": "/system/(.*)",
      "dest": "CRM/system/$1"
    },
    {
      "src": "/(.*)",
      "dest": "CRM/index.php"
    }
  ],
  "env": {
    "APP_ENV": "production",
    "CI_ENVIRONMENT": "production"
  },
  "functions": {
    "CRM/index.php": {
      "maxDuration": 30
    }
  }
}
